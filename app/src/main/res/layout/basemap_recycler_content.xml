<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="21dp"
        android:padding="@dimen/activity_vertical_margin"
        app:cardCornerRadius="@dimen/com_facebook_likeboxcountview_caret_width">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="185dp"
            android:layout_margin="5dp"
            android:columnCount="1"
            android:orientation="horizontal"
            android:rowCount="2">

            <TextView
                android:id="@+id/basemap_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:text="TextView"
                android:layout_column="0"
                android:layout_row="0"
                android:textAlignment="center"
                android:textColor="@color/material_drawer_background"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/basemap_image"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait"></ImageView>

        </GridLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
